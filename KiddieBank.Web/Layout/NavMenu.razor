@inject NavigationManager NavigationManager

<div class="top-row pl-4 navbar navbar-dark">
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@("/User")" Match="NavLinkMatch.All">
                <span class="oi oi-pulse" aria-hidden="true"></span> Users
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@("/Transaction/2")" Match="NavLinkMatch.All">
                <span class="oi oi-delete" aria-hidden="true"></span> Transaction
            </NavLink>
        </li>

    </ul>
</div>

@code {
    private bool collapseNavMenu = false;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}